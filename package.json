{
  "name": "navd-ai",
  "version": "0.1.1",
  "description": "NAVD: Persistent conversational memory for AI agents. Two files, zero databases, pluggable embeddings.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./openai": {
      "import": "./dist/embeddings/openai.js",
      "types": "./dist/embeddings/openai.d.ts"
    },
    "./local": {
      "import": "./dist/embeddings/local.js",
      "types": "./dist/embeddings/local.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "apache-arrow": "^18.1.0"
  },
  "peerDependencies": {
    "@huggingface/transformers": "^3.0.0",
    "openai": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@huggingface/transformers": {
      "optional": true
    },
    "openai": {
      "optional": true
    }
  },
  "devDependencies": {
    "@huggingface/transformers": "^3.8.1",
    "openai": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "license": "MIT"
}
